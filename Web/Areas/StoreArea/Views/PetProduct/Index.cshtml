@model IEnumerable<PetProduct>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Pet Products List</h4>
            <a class="btn btn-gradient-primary btn-rounded btn-fw" asp-action="Create" asp-controller="PetProduct"> Create </a>
            <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>

                        <th> #</th>
                        <th>Product Icons</th>
                        <th>Product Name</th>
                        <th>Mfg Name</th>
                        <th>Price</th>
                        <th> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int srno = 1;
                    }
                    @foreach (var temp in Model)
                    {
                        if (Convert.ToInt64(@Context.Session.GetString("StoreId")) == temp.Product.StoreId)
                        {
                            <tr>
                            <td>@srno</td>
                            <td>
                                <img src="@temp.PhotoPath" width="100" height="100" />
                            </td>
                            <td>@temp.ProductName</td>
                            <td>@temp.MfgName</td>
                            <td>@temp.Product.ProductPrice</td>
                            <td>
                                <a class="btn btn-gradient-info btn-rounded btn-fw" asp-action="Edit" asp-route-id="@temp.PetProductId">Edit</a>
                                <a class="btn btn-gradient-danger btn-rounded btn-fw" asp-action="Delete" asp-route-id="@temp.PetProductId">Delete</a>
                                <a class="btn  btn-gradient-success btn-rounded btn-fw" asp-action="Details" asp-route-id="@temp.PetProductId">Details</a>
                            </td>

                        </tr>
                        srno++;
                    }
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
</div>
