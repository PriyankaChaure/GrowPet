@model PetProductVM
<script src="~/jquery/jquery.js"></script>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Delete  </h4>

        <div>
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info">@ViewBag.Message</div>
            }
        </div>

        <form class="forms-sample" enctype="multipart/form-data" asp-action="Delete" method="post">
            <div><input type ="hidden" @Context.Session.GetString("StoreId")
                <input type="hidden" asp-for="PetProductId"/>
                <input type="hidden" asp-for="ProductId"/>
            
              
            </div>
            <div class="form-group">
                <label class="form-label"> Product Name</label>
                <input asp-for="ProductName" class="form-control" placeholder="ProductName">
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Mfg Name</label>
                <input asp-for="MfgName" class="form-control" placeholder="MfgName">
                <span asp-validation-for="MfgName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleSelectCountry"> Product</label>
                <select class="form-select" asp-for="ProductType" name="ProductType" asp-items="@Html.GetEnumSelectList<ProductEnum>()">
                    <option value="0">Select Product</option>
                </select>
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label"> Product Desc</label>
                <textarea asp-for="ProductDesc" class="form-control" placeholder="ProductDescription"></textarea>
                <span asp-validation-for="ProductDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label"> Product Price</label>
                <input asp-for="ProductPrice" name="ProductPrice" class="form-control" placeholder="Price">
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label class="form-label"> Pet Product Photo</label>
                <img src="@Model.PhotoPath" height="100" width="100" />
                <input type="hidden" asp-for="PhotoPath" />

            </div>

         
           
            <button type="submit" class="btn btn-gradient-primary me-2">Delete</button>
            <button class="btn btn-light"><a asp-action="Index" asp-controller="PetProduct">Cancel</a></button>
        </form>
    </div>
</div>
