@model Solution
<script src="~/jquery/jquery.js"></script>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Create  </h4>

        <div>
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-info">@TempData["Message"]</div>
            }
        </div>

        <form class="forms-sample" enctype="multipart/form-data" asp-action="GiveSolution" method="post">

            <div class="form-group">
                <lable>Solution For (Complaint Id):@TempData["ComplaintID"]</lable>
            </div>
            <input type="hidden" asp-for="ComplaintId" value="@TempData["ComplaintID"]" />
            <div class="form-group">
                <label class="form-label">Solution Date</label>
                <input asp-for="SolutionDate" class="form-control" placeholder="SolutionDate">
                <span asp-validation-for="SolutionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label"> Solution Description</label>
                <textarea asp-for="SolutionDesc" class="form-control" placeholder="SolutionDesc"></textarea>
                <span asp-validation-for="SolutionDesc" class="text-danger"></span>
            </div>
          
            <button type="submit"  class="btn btn-gradient-primary me-2">Save</button>
            <button class="btn btn-light"><a asp-action="Index" asp-controller="Complaints">Cancel</a></button>
        </form>
    </div>
</div>
