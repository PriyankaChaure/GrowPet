@model IEnumerable<Offer>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
           
            <h4 class="card-title">Category List</h4>
            <a class="btn btn-gradient-primary btn-rounded btn-fw" asp-action="Create" asp-controller="Offer"> Create </a>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>

                            <th> #</th>
                            <th>Offer Name</th>
                            <th>Discount</th>
                            <th>Store Name</th>
                            <th> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int srno = 1;
                        }
                        @foreach (var temp in Model)
                        {
                            if (Convert.ToInt64(@Context.Session.GetString("StoreId")) == temp.StoreId)
                            {
                                <tr>

                                <td>@srno</td>
                                <td>@temp.OfferName</td>
                                <td>@temp.Discount</td>
                                <td>@temp.Store.StoreName</td>
                                <td>
                                    <a class="btn btn-gradient-info btn-rounded btn-fw" asp-action="Edit" asp-route-id="@temp.OfferId">Edit</a>
                                    <a class="btn btn-gradient-danger btn-rounded btn-fw" asp-action="Delete" asp-route-id="@temp.OfferId">Delete</a>
                                </td>

                            </tr>
                            srno++;
                        }
                        }
                    </tbody>
                </table>
            </div>
          
        </div>
    </div>
</div>
