@model Offer
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Edit </h4>

        <div>
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info">@ViewBag.Message</div>
            }
        </div>

        <form class="forms-sample" asp-action="Edit" asp-controller="Offer" method="post">
            <input type="hidden" asp-for="OfferId" />

            <div class="form-group">
                <label class="form-label"> Offer Name</label>
                <input asp-for="OfferName" class="form-control" placeholder="OfferName">
                <span asp-validation-for="OfferName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label"> Discount</label>
                <input asp-for="Discount" class="form-control" placeholder="Discount">
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleSelectCountry">Select Store</label>
                <select class="form-select" asp-for="StoreId" asp-items="@ViewBag.StoreId" id="exampleSelectStore">
                    <option>Select Store</option>
                </select>
                <span asp-validation-for="StoreId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-gradient-primary me-2">Edit</button>
            <button class="btn btn-light"><a asp-action="Index" asp-controller="Offer">Cancel</a></button>
        </form>
    </div>
</div>
