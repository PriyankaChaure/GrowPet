@model IEnumerable<State>

<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">State List</h4>
            <a class="btn btn-gradient-primary btn-rounded btn-fw" asp-action="Create" asp-controller="State"> Create </a>
            <table class="table table-hover">
                <thead>
                    <tr>

                        <th> #</th>
                        <th>State Name</th>
                        <th>Country Name</th>
                        <th>Actions</th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        int srno = 1;
                    }
                    @foreach (var temp in Model)
                    {
                        <tr>

                            <td>@srno</td>
                            <td>@temp.StateName</td>
                            <td>@temp.Country.CountryName</td>
                            <td>
                                <a class="btn btn-gradient-info btn-rounded btn-fw" asp-action="Edit" asp-route-id="@temp.StateId">Edit</a>
                                <a class="btn btn-gradient-danger btn-rounded btn-fw" asp-action="Delete" asp-route-id="@temp.StateId">Delete</a>
                            </td>

                        </tr>
                        srno++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
