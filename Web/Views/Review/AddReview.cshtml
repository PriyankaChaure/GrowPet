
@{
    Layout = "~/Views/Shared/userlayout.cshtml";

}
<!DOCTYPE html>
<html lang="en">

<head>
    <title>GrowPet</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="author" content="">
    <meta name="keywords" content="">
    <meta name="description" content="">
    @* </head> *@

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link href="~/userfrontend/assets/swiper-bundle.min.css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link href="~/userfrontend/assets/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" type="text/css" href="~/UserFrontend/css/vendor.css">
    <link rel="stylesheet" type="text/css" href="~/UserFrontend/style.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Chilanka&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link href="~/userfrontend/assets/css2.css" ; rel="stylesheet" />
    <link href="~/userfrontend/assets/swiper-bundle.min.css" rel="stylesheet" />

    <style>
        #addCartBtn:hover {
            background-color: #000;
        }

        #cartText:hover {
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

    <section id="register" @* style="background: url('/UserFrontend/images/background-img.png') no-repeat;" *@>
     
                    <h2 class="display-3 fw-normal text-center">
                        <span class="text-primary">Review</span>
                    </h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                   
                                        <div class="container">
                                            <div class="section-header d-md-flex justify-content-between align-items-center mb-3">
                                                <div class="container">
                                                    <div class="row">
                                                        <div class="cold-md-12">
                                        <div class="d-flex flex-wrap col-sm-4 col-lg-4 ">

                                           
                                            <a  style="margin-left:7rem;" id="addCartBtn" asp-action="review" asp-controller="Review" class="btn-wishlist px-4 pt-3">
                                                <h6 id="cartText">  Add Review</h6>
                                            </a>

                                        </div>
                                        <br />
                                        <div class="col text-center">
                                           

                                                            <div class="btn-group w-75" role="group" aria-label="Basic example">
                                                <button onclick="productreview()" type="button" class="btn btn-dark" id="addCartBtn" style="background-color:#f9f3ec;color:#000;">
                                                                    <a >
                                                                        <i class="mdi mdi-heart-outline"></i>
                                                                        Product Review
                                                                    </a>
                                                                </button>

                                                <button onclick="storereview()" type="button" class="btn btn-dark" style="background-color:#f9f3ec;color:#000;">
                                                                    <a >
                                                                        <i class="mdi mdi-calendar"></i>
                                                                        Store Review
                                                                    </a>
                                                                </button>
                                                
                                                            </div>
                                        </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                    

                </section>
                <div class="col text-center" id="checkproduct" style="display:none;">
                    @await Component.InvokeAsync("PVC", new { userid = Convert.ToInt64(@Context.Session.GetString("UserId")) })
                </div>
                <div class="col text-center" id="checkstore" style="display:none;">
                    @await Component.InvokeAsync("SVC", new { userid = Convert.ToInt64(@Context.Session.GetString("UserId")) })
                </div>
                <div class="col text-center">
                    <div class="btn-group w-25" role="group" aria-label="Basic example">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-sm w-25 btn-secondary btn-lg rounded-1">Back</a>


                    </div>
                </div>
               







            </div>
</div>
</div>

    <script src="~/UserFrontend/js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
    <script src="~/UserFrontend/js/plugins.js"></script>
    <script src="~/UserFrontend/js/script.js"></script>
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
    <script src="~/userfrontend/assets/bootstrap.bundle.min.js"></script>
    <script src="~/userfrontend/assets/iconify-icon.min.js"></script>
    <script src="~/userfrontend/assets/swiper-bundle.min.js"></script>
    <script>

        function productreview() {
            document.getElementById("checkproduct").style = "display:block;";
            document.getElementById("checkstore").style = "display:none;";
        }
        function storereview() {
            document.getElementById("checkproduct").style = "display:none;";
            document.getElementById("checkstore").style = "display:block;";
        }

    </script>
</body>
</html>