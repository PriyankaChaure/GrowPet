@model UserAddVM
<script src="~/jquery/jquery.js"></script>
<!DOCTYPE html>
<html lang="en">

<head>
    <title>GrowPet</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="author" content="">
    <meta name="keywords" content="">
    <meta name="description" content="">
    @* </head> *@

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link href="~/userfrontend/assets/swiper-bundle.min.css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link href="~/userfrontend/assets/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" type="text/css" href="~/UserFrontend/css/vendor.css">
    <link rel="stylesheet" type="text/css" href="~/UserFrontend/style.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Chilanka&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link href="~/userfrontend/assets/css2.css" ; rel="stylesheet" />
    <link href="~/userfrontend/assets/swiper-bundle.min.css" rel="stylesheet" />

    <style>
        #addCartBtn:hover {
            background-color: #000;
        }

        #cartText:hover {
            color: #fff;
        }
    </style>
</head>
<body>

    <section id="register" style="height:1900px;background: url('/UserFrontend/images/background-img.png') ;">
        <div class="container ">
            <div class="row my-5 py-5">
                <div class="offset-md-3 col-md-6 my-5 ">
                    <h2 class="display-3 fw-normal text-center">
                      New User <span class="text-primary">Sign Up</span>
                    </h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form asp-action="SignUp" method="post">
                        <div class="mb-3">
                            <label style="font-size:30px; margin-left:-380px;">First Name:</label>
                            <input asp-for="FirstName" name="FirstName" class="form-control form-control-lg"
                                   placeholder="Enter Your First Name ">
                            <span asp-validation-for="FirstName"></span>
                        </div>
                        <div class="mb-3">
                            <label style="font-size:30px; margin-left:-380px;">Last Name:</label>
                            <input asp-for="LastName" name="LastName" class="form-control form-control-lg" 
                                   placeholder="Enter Your Last Name">
                            <span asp-validation-for="LastName"></span>
                        </div>
                        <div class="mb-3">
                            <label style="font-size:30px; margin-left:-380px;">Address:</label>
                            <textarea asp-for="Address" name="Address" class="form-control form-control-lg"  
                                   placeholder="Enter Your Address"></textarea>
                            <span asp-validation-for="Address"></span>
                        </div>
                        <div class="mb-3">
                            <label style="font-size:30px; margin-left:-380px;">Mobile No:</label>
                            <input asp-for="MobileNo" name="MobileNo" class="form-control form-control-lg"  
                                   placeholder="Enter Your Mobile No">
                            <span asp-validation-for="MobileNo"></span>
                        </div>
                        <div class="mb-3">
                            <label style="font-size:30px; margin-left:-380px;">Date Of Birth:</label>
                            <input asp-for="DateOfBirth" class="form-control form-control-lg"
                            placeholder="Enter Your Date Of Birth" />
                        </div>
                        <div class="mb-3">
                            <label style="font-size:30px; margin-left:-380px;">Gender:</label>
                            <select style="font-size:30px;"class="form-select" name="Gender" asp-items="@Html.GetEnumSelectList<GenderEnum>()">
                                <option value="0">Select Gender</option>
                            </select>
                            <span asp-validation-for="Gender"></span>
                        </div>
                        <div class="mb-3">
                           
                            <input asp-for="IsActive" type="checkbox" class="form-check-input">IsActive <i class="input-helper"></i>
                        </div>
                       
                        <div class="mb-3">
                            <label style="font-size:30px; margin-left:-380px;">EmailId:</label>
                            <input asp-for="EmailId" name="EmailId" class="form-control form-control-lg"
                                   placeholder="Enter Your EmailId">
                            <span asp-validation-for="EmailId"></span>
                        </div>
                        <div class="mb-3">
                            <label style="font-size:30px; margin-left:-380px;">Password:</label>
                            <input asp-for="Password" name="Password" class="form-control form-control-lg"
                                   placeholder="Enter Your Password">
                            <span asp-validation-for="Password"></span>
                        </div>
                       <div class="mb-3">

                            <label style="font-size:30px; margin-left:-380px;" for="exampleSelectCountry">Select Country:</label>
                                <select class="form-control" id="Country" asp-for="CountryId" asp-items="@ViewBag.CountryId">
                                    <option value="0">Select Country</option>
                                </select>
                            <span asp-validation-for="CountryId"></span>
                       </div>
                       <div class="mb-3">
                            <label style="font-size:30px; margin-left:-380px;" for="exampleSelectCountry">Select State:</label>
                            <select class="form-control" id="State" asp-for="StateId" asp-items="@ViewBag.StateId">
                                <option value="0">Select State</option>
                            </select>
                            <span asp-validation-for="StateId"></span>
                       </div>
                       <div class="mb-3">
                            <label style="font-size:30px; margin-left:-380px;" for="exampleSelectCountry">Select City:</label>
                            <select class="form-control" id="City" asp-for="CityId" asp-items="@ViewBag.CityId">
                                <option value="0">Select City</option>
                            </select>
                            <span asp-validation-for="CityId"></span>
                       </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-dark btn-lg rounded-1">SignUp</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>


    <script src="~/UserFrontend/js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
    <script src="~/UserFrontend/js/plugins.js"></script>
    <script src="~/UserFrontend/js/script.js"></script>
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
    <script src="~/userfrontend/assets/bootstrap.bundle.min.js"></script>
    <script src="~/userfrontend/assets/iconify-icon.min.js"></script>
    <script src="~/userfrontend/assets/swiper-bundle.min.js"></script>

</body>
</html>
<script type="text/javascript">
    $(function () {

        $("#Country").change(function () {

            $.ajax({
                url: "/ManageUser/GetStateJson/" + $("#Country").val(),
                type: "Get",
                contentType: "application/json",
                success: function (result) {
                    //alert(JSON.stringify(result));
                    $("#State").empty();
                    for (var i = 0; i < result.length; i++) {
                        var str = "<option value='" + result[i].stateId + "'>" + result[i].stateName + "</option>";
                        $("#State").append(str);
                    }
                },
                error: function (err) {
                    alert(JSON.stringify(err));
                }
            });

        });



        $("#State").change(function () {

            $.ajax({
                url: "/ManageUser/GetCityJson/" + $("#State").val(),
                type: "Get",
                contentType: "application/json",
                success: function (result) {
                    //alert(JSON.stringify(result));
                    $("#City").empty();
                    for (var i = 0; i < result.length; i++) {
                        var str = "<option value='" + result[i].cityId + "'>" + result[i].cityName + "</option>";
                        $("#City").append(str);
                    }
                },
                error: function (err) {
                    alert(JSON.stringify(err));
                }
            });

        });

    });

</script>