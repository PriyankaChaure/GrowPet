<div class="offcanvas-body">
    <div class="order-md-last">
       
        <table class="table table-hover w-100">
            <thead>

                <tr style="background-color:#f9f3ec;color:#000;">

                    <th> #</th>
                    <th>Food Icons</th>
                    <th>Food Name</th>
                    <th>Mfg Name</th>
                    <th>GoodFoodForPetAge</th>
                  
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Amount</th>
                    <th> Actions</th>
                </tr>
            </thead>
            <tbody style="background-color:#f9f3ec;color:#000;">
                @{
                    int srno = 1;
                    decimal? amount = 0, totalamount = 0;
                }
                @foreach (var temp in Model)
                {

                    <tr>
                        <td>@srno</td>
                        <td>
                            <img src="@temp.PhotoPath" width="100" height="100" />
                        </td>
                        <td>@temp.FoodName</td>
                        <td>@temp.MfgName</td>
                        <td>@Enum.GetName(typeof(GoodFoodForPetAccordingPetAgeEnum), temp.GoodFoodAccordingToPetAge)</td>
                       
                        <td>@temp.Price</td>
                        <td>@temp.Quantity</td>
                        <td>
                            @{
                                amount = temp.Quantity * temp.Price;
                                totalamount += amount;
                            }
                            @amount
                        </td>
                        <td>
                            <a id="addCartBtn" asp-action="DeleteCart" asp-controller="Cart" asp-route-cartid="@temp.CartId" class="btn  btn-sm">
                                <h6 id="cartText"> Delete</h6>

                            </a>
                        </td>
                    </tr>
                    srno++;
                }
