@model IEnumerable<StoreReviewVM>
<section id="categories">
    <div class="container-fluid">
        <div class="row ">
            <div class=" text-center">
                <section id="clothing" class="overflow-hidden">
                    <div class="container-fluid">
                        <div class="section-header d-md-flex justify-content-between align-items-center">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div>  @TempData["Message"]</div>
                                        <div class="btn-group" role="group" aria-label="Basic example">
                                            <table class="table table-hover w-100">
                                                <thead>
                                                   
                                                    <tr style ="background-color:#f9f3ec;color:#000;">

                                                        <th> #</th>
                                                        <th>Icons</th>
                                                        <th>Product Name</th>
                                                        <th>User Name</th>
                                                        <th>Rating</th>
                                                        <th> Review</th>
                                                           
                                                    </tr> 
                                                </thead>
                                                <tbody style="background-color:#f9f3ec;color:#000;">
                                                    @{
                                                        int srno = 1;
                                                    }
                                                    @foreach (var temp in Model)
                                                    {

                                                        <tr>
                                                            <td>@srno</td>
                                                            @if (temp.ProductType == (int)ProductEnum.Pet)
                                                            {
                                                                <td>
                                                                    <img src="@temp.PhotoPath1" width="100" height="100" />
                                                                </td>
                                                                <td>  @temp.PetName</td>
                                                            }
                                                            else if (temp.ProductType == (int)ProductEnum.PetFood)
                                                            {
                                                                <td>
                                                                    <img src="@temp.PhotoPath2" width="100" height="100" />
                                                                </td>
                                                                <td>  @temp.FoodName</td>
                                                            }
                                                            else if (temp.ProductType == (int)ProductEnum.PetProduct)
                                                            {
                                                                <td>
                                                                    <img src="@temp.PhotoPath3" width="100" height="100" />
                                                                </td>
                                                                <td> @temp.ProductName</td>
                                                            }
                                                            <td>@temp.FullName</td>
                                                            <td>@Enum.GetName(typeof(RatingEnum), temp.Rating)</td>
                                                            <td>@temp.ReviewDesc</td> 
                                                        </tr>
                                                        srno++;

                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
               
            </div>
        </div>
    </div>
</section>
