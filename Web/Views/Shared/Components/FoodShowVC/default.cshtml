@model IEnumerable<CartVM>
<style>
    #addCartBtn:hover {
        background-color: #000;
    }

    #cartText:hover {
        color: #fff;
    }
</style>
@* <div class="offcanvas-header justify-content-center">
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
</div> *@


<table class="table table-hover w-100 table-bordered" ">
            <thead>

                <tr >

                    <th> #</th>
                    <th>Food Icons</th>
                    <th>Food Name</th>
                    <th>Mfg Name</th>
                    <th>GoodFoodForPetAge</th>

                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Amount</th>
                   
                </tr>
            </thead>
            <tbody >
                @{
                    int srno = 1;
                    decimal? amount = 0, totalamount = 0;
                }
                @foreach (var temp in Model)
                {

                    <tr>
                        <td>@srno</td>
                        <td>
                            <img src="@temp.PhotoPath" width="100" height="100" />
                        </td>
                        <td>@temp.FoodName</td>
                        <td>@temp.MfgName</td>
                        <td>@Enum.GetName(typeof(GoodFoodForPetAccordingPetAgeEnum), temp.GoodFoodAccordingToPetAge)</td>

                        <td>@temp.Price</td>
                        <td>@temp.Quantity</td>
                        <td>
                            @{
                                amount = temp.Quantity * temp.Price;
                                totalamount += amount;
                            }
                            @amount
                        </td>
                       
                    </tr>
                    srno++;
                }

            </tbody>
        </table>

