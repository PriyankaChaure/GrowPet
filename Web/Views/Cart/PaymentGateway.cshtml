@model PaymentGatewayVM
<!DOCTYPE html>
<html lang="en">

<head>
    <title>GrowPet</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="author" content="">
    <meta name="keywords" content="">
    <meta name="description" content="">
    @* </head> *@

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link href="~/userfrontend/assets/swiper-bundle.min.css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link href="~/userfrontend/assets/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" type="text/css" href="~/UserFrontend/css/vendor.css">
    <link rel="stylesheet" type="text/css" href="~/UserFrontend/style.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Chilanka&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link href="~/userfrontend/assets/css2.css" ; rel="stylesheet" />
    <link href="~/userfrontend/assets/swiper-bundle.min.css" rel="stylesheet" />

    <style>
        #addCartBtn:hover {
            background-color: #000;
        }

        #cartText:hover {
            color: #fff;
        }
    </style>
</head>
<body>

    <section id="register" style="background: url('/UserFrontend/images/background-img.png') no-repeat;">
        <div class="container ">
            <div class="row my-5 py-5">
                <div class="offset-md-3 col-md-6 my-5 ">
                   
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form asp-action="PaymentGateway" asp-controller="Cart" method="post">
                        <input type="hidden" name="pmode" value="@ViewBag.PaymentMode" />
                        <div class="mb-3">
                            <input asp-for="CardNo" name="CardNo" class="form-control form-control-lg"
                                   placeholder="Enter Your Card No">
                            <span asp-validation-for="CardNo"></span>
                        </div>

                        <div class="mb-3">
                            <input asp-for="ExpiryDate" name="ExpiryDate" class="form-control form-control-lg"
                                   placeholder="Enter Your ExpiryDate">
                            <span asp-validation-for="ExpiryDate"></span>
                        </div>
                        <div class="mb-3">
                            <input asp-for="CVV" name="CVV" class="form-control form-control-lg"
                                   placeholder="Enter Your CVV">
                            <span asp-validation-for="CVV"></span>
                        </div>
                        <div class=" mb-3 d-grid gap-2">
                            <button type="submit" class="btn btn-dark btn-lg rounded-1">MakePayment</button>
                        </div>
                        <div class="d-grid gap-2">
                            <a asp-action="GetMyCart" asp-controller="Cart" class="btn btn-secondary btn-lg rounded-1">  Go Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>


    <script src="~/UserFrontend/js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
    <script src="~/UserFrontend/js/plugins.js"></script>
    <script src="~/UserFrontend/js/script.js"></script>
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
    <script src="~/userfrontend/assets/bootstrap.bundle.min.js"></script>
    <script src="~/userfrontend/assets/iconify-icon.min.js"></script>
    <script src="~/userfrontend/assets/swiper-bundle.min.js"></script>

</body>
</html>